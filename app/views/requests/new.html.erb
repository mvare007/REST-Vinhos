<div class="container">
  <%= simple_form_for @request do |f| %>
  <div class="row">
    <div class="col-sm-12 col-lg-6">
      <%= f.input :name ,
          placeholder: '2015 Cabeça de Burro Reserva',
          hint: 'Year of the crop followed by the name of the wine.' %>
    </div>
    <div class="col-sm-12 col-lg-6">
      <%= f.input :variant,
          collection: %i[Tinto Branco Rosé Verde Espumante Porto Madeira Moscatel Sobremesa]  %>
    </div>
    <div class="col-sm-12 col-lg-6">
      <%= f.input :maker %>
    </div>
    <div class="col-sm-12 col-lg-6">
      <%= f.input :volume %>
    </div>
    <div class="col-sm-12 col-lg-6">
      <%= f.input :country,
          placeholder: ' E.g. Portugal' %>
    </div>
    <div class="col-sm-12 col-lg-6">
      <%= f.input :region,
          placeholder: ' E.g. Douro' %>
    </div>
    <div class="col-lg-12">
      <%= f.input :description %>
    </div>
    <div class="col-lg-12">
      <%= f.button :submit, 'Add Wine to API', class:'btn btn-block btn-secondary w-25 mt-4 mx-auto' %>
    </div>
    <% end %>
  </div>
</div>
